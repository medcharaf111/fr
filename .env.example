# ========================================
# NATIVE LEARN NEXUS - FRONTEND ENVIRONMENT
# ========================================
# React/Vite Frontend Configuration
# Copy this file to .env and update with your values

# ----------------------------------------
# API Configuration
# ----------------------------------------
# Backend API base URL
VITE_API_URL=http://localhost:8000/api

# ----------------------------------------
# Application Settings
# ----------------------------------------
# Application name
VITE_APP_NAME=Native Learn Nexus
# Application version
VITE_APP_VERSION=1.0.0
# Environment (development, staging, production)
VITE_NODE_ENV=development

# ----------------------------------------
# Feature Flags
# ----------------------------------------
# Enable/disable features
VITE_ENABLE_PORTFOLIO=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_AI_COMPANION=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# ----------------------------------------
# Authentication
# ----------------------------------------
# Token storage key
VITE_AUTH_TOKEN_KEY=native_learn_token
# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# ----------------------------------------
# UI Configuration
# ----------------------------------------
# Items per page for pagination
VITE_ITEMS_PER_PAGE=10
# Theme (light, dark, auto)
VITE_DEFAULT_THEME=light
# Language (en, fr, ar)
VITE_DEFAULT_LANGUAGE=en

# ----------------------------------------
# Development Settings
# ----------------------------------------
# Enable mock data for development
VITE_USE_MOCK_DATA=false
# Enable debug mode
VITE_DEBUG=true
# Show console logs
VITE_SHOW_LOGS=true

# ----------------------------------------
# Analytics (Optional)
# ----------------------------------------
# Google Analytics ID
VITE_GA_TRACKING_ID=
# Hotjar Site ID
VITE_HOTJAR_ID=

# ----------------------------------------
# CDN/Asset URLs (Production)
# ----------------------------------------
# Base URL for static assets
VITE_ASSETS_URL=/assets
# CDN URL (if using)
VITE_CDN_URL=

# ----------------------------------------
# Performance
# ----------------------------------------
# Enable service worker
VITE_ENABLE_PWA=false
# Cache timeout in seconds
VITE_CACHE_TIMEOUT=3600

# ----------------------------------------
# Error Tracking (Optional)
# ----------------------------------------
# Sentry DSN for error tracking
VITE_SENTRY_DSN=
# Enable error reporting
VITE_ENABLE_ERROR_TRACKING=false
